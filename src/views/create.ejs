    function codeBlockCheck() {
        const value = document.getElementById('codeblock-checkbox').value;
        if (value === 'true') {
            document.getElementById('codeblock-checkbox').value = "false";
        } else {
            document.getElementById('codeblock-checkbox').value = "true";
        }
    }
