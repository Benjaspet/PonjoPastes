    <div class="container">
        <pre>
            <code class="typescript" style="padding-left: 20px; padding-right: 20px;">
                /**
                 * TypeScript implementation with sample response.
                 * @endpoint /api/v1/paste
                 */

                import * as axios from "axios";
                import {AxiosRequestConfig} from "axios";

                const requestConfig: AxiosRequestConfig = {
                    url: "https://pastes.ponjo.club/api/v1/create",
                    method: "PUT",
                    data: "Hello world!"
                };

                await axios.put(requestConfig)
                    .then(response => {
                        console.log(response.data);
                    })
                    .catch(error => {
                        console.log(error);
                    });
            </code>
